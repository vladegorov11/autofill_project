<div class="container-fluid mt-4">
  <% if @project.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <div class="row">
     <div class="col-md-6 offset-md-3 ">
       <h2 class='text-center'> <%= action_name.upcase  + ' Project'.upcase%> <h2>
       <%= simple_form_for @project do |f| %>
         <%#= f.error_notification %>
         <%= f.input :title, input_html: { class: "form-control mb-4"} , placeholder: 'Title', wrapper: false, label_html: { class: "sr-only" }%>
         <%= f.input :description, input_html: { class: "form-control mb-4"}, placeholder: 'Description', wrapper: false, label_html: { class: "sr-only" } %>
         <%= f.input :project_type, collection: Project.project_types.keys, prompt: "Choose project type",
            input_html: { class: "form-control form-control-sm" }, wrapper: false, label_html: { class: "sr-only" } %>
        <div id='domain'>
          <%= f.input :domain, input_html: { class: "form-control mb-4 mt-4"}, placeholder: 'Domain', wrapper: false, label_html: { class: "sr-only" } if @project.project_type == 'web'%>
        </div>
         <%= f.button :submit, class: "btn-lg btn-success btn-block mt-4" %>
       <% end %>
     </div>
  </div>
</div>
